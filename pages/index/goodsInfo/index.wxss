/* pages/index/goodsInfo/index.wxss */

.details {
  width: 100%;
  height: 100%;
  overflow: auto;
  background: #f5f5f5;
}

.swiper {
  width: 100%;
  height: 420rpx;
}

.swiper .slide-image {
  width: 100%;
  height: 100%;
}

.goods_desc {
  box-sizing: border-box;
  padding-bottom: 90px;
  font-size: 14px;
  width: 100%;
}

.desc {
  width: 100%;
  background: #fff;
  padding: 0 15px;
  box-sizing: border-box;
}

.originP {
  height: 40px;
  line-height: 40px;
  color: #f00;
  font-weight: 550;
  font-size: 22px;
}

.format {
  height: 45px;
  background: #fff;
  margin: 8px 0;
  padding: 0 20px 0 10px;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.format image {
  width: 6px;
  height: 12px;
}

.about {
  margin-top: 15px;
  padding: 0 10px;
  background: #fff;
}

.about view {
  height: 35px;
  line-height: 35px;
  display: flex;
}

.about_title {
  align-items: center;
  justify-content: center;
  border-bottom: solid 1px #f5f5f5;
}

.attr {
  width: 120px;
}

.goods_name {
  font-size: 16px;
  font-weight: 500;
  height: 40px;
  line-height: 55px;
}

.goods_ins {
  font-size: 13px;
  color: #999;
  line-height: 22px;
}

.goods_select {
  font-size: 14px;
  color: #333;
  padding: 5px 0;
  margin-left: 9px;
  margin-top: 15px;
}

.goods_list {
  margin: 5px 0;
  display: flex;
  flex-wrap: wrap;
  /* justify-content: space-around; */
}

.goods_item {
  /* width: 22vw; *//* height: 45px; */
  color: rgb(51, 51, 51);
  padding: 10px 20px;
  font-size: 12px;
  /* border: solid 1rpx #ccc; */
  background: rgb(242, 242, 242);
  box-sizing: border-box;
  border-radius: 20px;
  margin-bottom: 15px;
  text-align: center;
  display: flex;
  align-items: center;
  margin: 5px;
}

/* .goods_item+.goods_item {
  margin-right: 20px;
} */

/* .goods_item:nth-child(2n-1) {
  margin-left: 0;
} */

.active {
  background: rgb(254, 212, 7);
  color: rgb(0, 0, 1);
  border: none;
}

.price {
  /* padding: 0 30px; */
  box-sizing: border-box;
}

.price .now {
  font-size: 16px;
}

.price .old {
  color: #f00;
  font-size: 12px;
  margin-left: 10px;
}

.price .number {
  margin-right: 10px;
  float: right;
  display: flex;
  align-items: center;
}

.count {
  width: 30px;
  font-size: 16px;
  text-align: center;
  font-weight: 500;
}

.price .number image {
  width: 22px;
  height: 22px;
}

.goods_info {
  width: 100%;
}

.goods_buy {
  height: 90px;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.sure {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 500;
  height: 90px;
  width: 100%;
}

/* .goods_buy image {
  width: 100%;
  height: 100%;
} */

.use {
  height: 35px;
  color: #666;
  line-height: 35px;
  text-align: center;
}

.pop {
  width: 100%;
  height: 355px;
  background: #fff;
  transform: translate3d(0, 100%, 0);
  transition: all 0.2s;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 500;
}

.mask {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  z-index: 80;
}

.isPop {
  transform: translate3d(0, 0, 0);
}

.goods_price {
  height: 75px;
  display: flex;
  justify-content: space-between;
  padding: 0 15px;
  box-sizing: border-box;
  margin-top: 10px;
}

.goods_base {
  display: flex;
}

.goods_base image {
  width: 75px;
  height: 75px;
}

.goods_price image {
}

.now_price {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.now_price .new_price {
  font-size: 22px;
  margin-bottom: 5px;
  color: #f00;
}

.now_price .old_price {
  font-size: 13px;
  color: #f00;
  margin-left: 6px;
}

.close image {
  width: 26px;
  height: 26px;
  margin-top: 10px;
}

.taocan {
  box-sizing: border-box;
  padding: 0 5px 0 15px;
  height: 180px;
  overflow: auto;
}
