/**index.wxss**/

.home {
  width: 100%;
  height: 100%;
  background: #f7f7f7;
  overflow-x: hidden;
}

.swiper {
  width: 100%;
  height: 420rpx;
}

.swiper .slide-image {
  width: 100%;
  height: 100%;
}
.guide{
  font-size: 14px;
  padding-left: 15px;
  margin-top: 20px;
  display: flex;
  align-items: center;
}
.guide image{
  width: 22px;
  height: 22px;
  margin-right: 10px;
}
.goods {
  width: 100%;
  box-sizing: border-box;
  padding: 20px 15px;
}

.goods_item {
  width: 100%;
  position: relative;
}

.goods_title {
  font-size: 36rpx;
  color: #333;
  padding: 0px 0 15px 8px;
}

.goods_title::before {
  content: "";
  position: absolute;
  left: 0;
  width: 6rpx;
  top: 2px;
  height: 40rpx;
  background: #fed916;
}

.goods_info {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.goods_info .item {
  width: 330rpx;
  /* height: 130px; */
  margin-bottom: 15px;
  background: #fff;
  border: solid 1rpx #fff;
  border-radius: 15px;
  box-sizing: border-box;
  box-shadow: 0 3px 2px #ddd;
}

.goods_desc {
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
  /* padding: 10px; */
  line-height: 30px;
  box-sizing: border-box;
}

.price {
  /* float: right; */
}

.goods_image {
  width: 100%;
  height: 90px;
  border-radius: 12px;
}

.goods_image image {
  width: 100%;
  height: 100%;
  overflow: hidden;
  border-radius: 12px;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 300;
}

.popContent {
  position: relative;
}

.giftPop {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
  z-index: 500;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.close {
  width: 32px;
  margin-top: -20px;
}

.gift {
  width: 300px;
}

.reciveBtn {
  background: #fff;
}
