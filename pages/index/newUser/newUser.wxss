.newUser{
  width: 100%;
  height: 100%;
  overflow: auto;
}
.banner {
  width: 100%;
  height: 175px;
}

.banner image {
  width: 100%;
  height: 100%;
}

.content {
  display: flex;
  align-items: center;
  flex-direction: column;
}

.con-t {
  font-size: 18px;
  color: rgb(51, 51, 51);
  margin: 20px 0;
}

.btn {
  font-size: 20px;
  width: 200px;
  height: 50px;
  border-radius: 25px;
  background: rgb(254, 211, 7);
}

.code {
  width: 200px;
  height: 200px;
  background: #fff;
  border-radius: 20px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.code image {
  width: 170px;
  height: 170px;
}

.shibie {
  position: relative;
  text-align: center;
  width: 280px;
  height: 30px;
  line-height: 30px;
  font-size: 15px;
  margin: 20px auto 20px;
  color: rgb(51, 51, 51);
}

.shibie::before {
  content: "";
  position: absolute;
  top: 15px;
  left: 0px;
  width: 65px;
  height: 1px;
  background: #999;
}

.shibie::after {
  content: "";
  position: absolute;
  top: 15px;
  right: 0px;
  width: 65px;
  height: 1px;
  background: #999;
}

.more {
  font-size: 15px;
  color: rgb(51, 51, 51);
  margin-top: 15px;
}
