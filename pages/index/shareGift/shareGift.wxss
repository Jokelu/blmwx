  height: 175px;
}

.shareImg image {
  width: 100%;
  height: 100%;
}

.share_min {
  width: 308px;
  height: 235px;
  border-radius: 15px;
  background: #fff;
  margin: 30px auto 0;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.share_t {
  margin-top: 29px;
  font-size: 18px;
  color: #000;
}

.share_m {
  font-size: 15px;
  margin: 15px 0;
  color: rgb(51, 51, 51);
}

.btn {
  width: 74px;
  height: 74px;
  background: #fff;
  padding: 0;
}

.btn image {
  width: 100%;
  height: 100%;
}

.btn::after {
  border: none;
}

.share_b {
  font-size: 15px;
  margin: 15px 0;
  color: rgb(51, 51, 51);
}

.activeRule {
  position: relative;
  text-align: center;
  width: 220px;
  height: 30px;
  line-height: 30px;
  font-size: 15px;
  margin: 52px auto 27px;
  color: rgb(51, 51, 51);
}
.activeRule::before{
  content: "";
  position: absolute;
  top: 15px;
  left: 0px;
  width: 65px;
  height: 1px;
  background: #999;
}
.activeRule::after{
  content: "";
  position: absolute;
  top: 15px;
  right: 0px;
  width: 65px;
  height: 1px;
  background: #999;
}
.rule_desc{
  padding: 10px;
  box-sizing: border-box;
  font-size: 12px;
  line-height: 22px;
  color: rgb(51, 51, 51) 
}