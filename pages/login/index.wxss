page {
  height: 100%;
  background: #f5f5f5;
}

.login_banner {
  width: 100%;
  height: 200px;
}

.login {
  width: 100%;
  height: 100%;
  overflow: auto;
}

.form {
  display: flex;
  border-bottom: solid 1px #f5f5f5;
  background: #fff;
}

.form_label {
  background: #fff;
  width: 120px;
  font-size: 14px;
  line-height: 45px;
  padding-left: 8px;
}

input {
  height: 45px;
  font-size: 14px;
  background: #fff;
  padding-left: 10px;
}

.phone {
  width: 100%;
}

.login_code {
  width: 100%;
  display: flex;
}

.login_code .code {
  flex: 1;
}

.login_code .login_get {
  width: 125px;
  text-align: center;
  line-height: 45px;
  color: #fed916;
  font-size: 14px;
  background: #fff;
  border-radius: 0;
  border-left: solid 1px #f5f5f5;
}

.login_code button[disabled] {
  background: #fff;
}

.login_get::after {
  border: none;
}

.submit {
  width: 90%;
  margin: 10px auto;
  background: #fed916;
}

.submitView button[disabled]:not([type]) {
  background: #f7df66e8;
  color: #666;
}

.activeRule {
  position: relative;
  text-align: center;
  width: 220px;
  height: 30px;
  line-height: 30px;
  font-size: 15px;
  margin: 52px auto 27px;
  color: rgb(51, 51, 51);
}
.activeRule::before{
  content: "";
  position: absolute;
  top: 15px;
  left: 0px;
  width: 65px;
  height: 1px;
  background: #999;
}
.activeRule::after{
  content: "";
  position: absolute;
  top: 15px;
  right: 0px;
  width: 65px;
  height: 1px;
  background: #999;
}
.rule_desc{
  padding: 10px;
  box-sizing: border-box;
  font-size: 12px;
  line-height: 22px;
  color: rgb(51, 51, 51) 
}