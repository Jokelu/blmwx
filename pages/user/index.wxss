/**index.wxss**/

page {
  height: 100%;
}

.user {
  width: 100%;
  height: 100%;
  background: #f7f7f7;
}

.user_wx {
  height: 176px;
  box-sizing: border-box;
  background: #fff;
  padding: 37px 0;
}

.userinfo-avatar {
  width: 76px;
  height: 76px;
  border: solid 1px #ddd;
  border-radius: 50%;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 200px;
  font-size: 16px;
  background: #fff;
  color: #aaa;
  padding: 0;
}

.nickname {
  font-size: 16px;
  color: #aaa;
}

.userinfo::after {
  border: none;
}

.usermotto {
  margin-top: 200px;
}

.card {
  padding-top: 25rpx;
}

.card_list {
  display: flex;
  align-items: center;
}

.card_list .item {
  width: 25vw;
  display: flex;
  line-height: 30px;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  font-size: 16px;
}

.card_list image {
  width: 60rpx;
  height: 60rpx;
}

.account {
  position: fixed;
  bottom: 0px;
  left: 0;
  z-index: 1000;
}

.couponCount {
  position: absolute;
  top: -4px;
  right: 20px;
  width: 15px;
  height: 15px;
  border: solid 1px #f00;
  border-radius: 50%;
  text-align: center;
  color: #fff;
  font-size: 12px;
  line-height: 15px;
  background: #f00;
}
